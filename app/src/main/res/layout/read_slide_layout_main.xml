<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/read_bg_color"
    tools:context="com.project.reader.ui.Activity.ReadActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/tv_slide_backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_left_icon"/>
        <TextView
            android:id="@+id/tv_slide_bookName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="8"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="title"/>
        <ImageView
            android:id="@+id/tv_slide_orderChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_positiveseq"
            android:layout_gravity="center_vertical|end"
            android:layout_weight="1"/>
    </LinearLayout>
    <ListView
        android:id="@+id/tv_slide_bookChapterList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/textSecondary"
        android:dividerHeight="0dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp" />
</LinearLayout>