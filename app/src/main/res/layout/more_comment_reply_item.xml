<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/more_comment_reply_main_item"
    android:background="@drawable/selector_textview"
    android:orientation="horizontal">
    <com.project.reader.ui.widget.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/header"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="6dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/more_comment_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匿名用户"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/more_comment_response_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一小时前"
            android:textSize="12sp"
            android:textColor="@color/textSecondary"/>
        <TextView
            android:id="@+id/more_comment_response_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:text="测试测试测试测试测试测试测试测试测试测试测试测试"/>
    </LinearLayout>
</LinearLayout>